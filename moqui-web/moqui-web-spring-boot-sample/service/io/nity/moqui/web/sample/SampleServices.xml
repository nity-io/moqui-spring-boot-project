<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-2.1.xsd">

    <service verb="bizCreateSample" type="script" allow-remote="true" authenticate="false"
             location="script/io/nity/moqui/entity/sample/SampleServices.groovy"
             method="createSample">
    </service>

    <service verb="bizUpdateSample"  type="script" allow-remote="true" authenticate="false"
             location="script/io/nity/moqui/entity/sample/SampleServices.groovy"
             method="updateSample">
        <in-parameters>
            <parameter name="sampleId" required="true"/>
            <auto-parameters include="nonpk" entity-name="sample.SampleEntity"/>
        </in-parameters>
    </service>

</services>
